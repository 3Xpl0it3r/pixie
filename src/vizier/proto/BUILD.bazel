go_proto_library(
    name = "service_go_proto",
    compilers = ["@io_bazel_rules_go//proto:gogoslick_grpc"],
    importpath = "pixielabs.ai/pixielabs/src/vizier/proto",
    proto = ":service_proto",
    visibility = ["//visibility:public"],
    deps = [
        "//src/common/codes:error_codes_go_proto",
        "//src/common/proto:status_go_proto",
        "//src/utils/proto:utils_go_proto",
        "@com_github_gogo_protobuf//gogoproto:go_default_library",
    ],

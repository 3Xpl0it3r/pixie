package(default_visibility = ["//visibility:public"])

load("//bazel:pl_build_system.bzl", "pl_cc_binary")
load("@io_bazel_rules_docker//cc:image.bzl", "cc_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

pl_cc_binary(
    name = "agent",
    srcs = ["agent.cc"],
    deps = [
        "//src/common/nats:cc_library",
        "//src/shared/version:cc_library",
        "//src/vizier/services/agent/controller:cc_library",
        "//src/vizier/services/shared/log/grpc_log_sink:cc_library",
    ],
)

cc_image(
    name = "agent_image",
    base = "//:pl_cc_base_image",
    binary = ":agent",
)

container_push(
    name = "push_agent_image",
    format = "Docker",
    image = ":agent_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/vizier/agent_image",
    tag = "{STABLE_BUILD_TAG}",
)

container_push(
    name = "push_test_agent_image",
    format = "Docker",
    image = ":agent_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/vizier/agent_image",
    tag = "{BUILD_USER}",
)

)

go_binary(
    name = "query_broker",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_image(
    name = "vizier_query_broker_image",
    binary = ":query_broker",
    visibility = ["//visibility:public"],
)

container_push(
    name = "push_vizier_query_broker_image",
    format = "Docker",
    image = ":vizier_query_broker_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/vizier_query_broker",
    tag = "{STABLE_BUILD_TAG}",
)

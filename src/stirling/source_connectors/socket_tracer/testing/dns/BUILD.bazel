package(default_visibility = ["//visibility:public"])

load("@bazel_tools//tools/build_defs/pkg:pkg.bzl", "pkg_tar")
load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_layer")

pkg_tar(
    name = "bind_conf_files",
    srcs = [
        "dnstest.com.zone",
        "named.conf",
    ],
    mode = "0755",
    strip_prefix = "/src/stirling/source_connectors/socket_tracer/testing/dns",
)

container_layer(
    name = "bind_conf",
    directory = "/etc/bind",
    tars = [":bind_conf_files"],
)

container_image(
    name = "dns_server_image",
    base = "@alpine_dns_linux_amd64//image",
    layers = [
        ":bind_conf",
    ],
    visibility = ["//visibility:public"],
)

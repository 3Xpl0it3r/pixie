load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

go_library(
    name = "pgsql_lib",
    srcs = ["demo_client.go"],
    importpath = "pixielabs.ai/pixielabs/src/stirling/source_connectors/socket_tracer/testing/containers/pgsql",
    visibility = ["//visibility:private"],
    deps = [
        "@com_github_jmoiron_sqlx//:sqlx",
        "@com_github_lib_pq//:pq",
        "@com_github_spf13_pflag//:pflag",
    ],
)

go_binary(
    name = "demo_client",
    embed = [":pgsql_lib"],
    visibility = ["//src/stirling:__subpackages__"],
)

go_image(
    name = "demo_client_image",
    binary = ":demo_client",
    visibility = ["//src/stirling:__subpackages__"],
)

container_push(
    name = "push_demo_client_image",
    format = "Docker",
    image = ":demo_client_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/demos/postgres/demo",
)

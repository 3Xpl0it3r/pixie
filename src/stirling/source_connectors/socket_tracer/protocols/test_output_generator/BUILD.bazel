load("//bazel:pl_build_system.bzl", "pl_cc_binary", "pl_cc_library")

package(default_visibility = ["//src/stirling:__subpackages__"])

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = [
            "test_generator.cc",
        ],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        "//src/common/system:cc_library",
        "//src/stirling/source_connectors/socket_tracer/protocols:cc_library",
    ],
)

pl_cc_binary(
    name = "test_generator",
    srcs = ["test_generator.cc"],
    deps = [
        "cc_library",
    ],
)

package(default_visibility = ["//visibility:public"])

# Make sure not to use pl_cc_binary, because the binary becomes 21 MB instead of 460KB.
cc_binary(
    name = "minitar",
    srcs = ["minitar.c"],
    defines = [
        "NO_BZIP2",
        "NO_COMPRESS",
        "NO_CREATE",
        "NO_CPIO_EXTRACT",
        "NO_LOOKUP",
    ],
    linkopts = ["-lz"],
    deps = ["//third_party/foreign_cc:libarchive"],
)

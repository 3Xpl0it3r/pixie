apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: stirling-wrapper
  namespace: pl-{{USER}}
  labels:
    app: pl-monitoring
spec:
  selector:
    matchLabels:
      name: stirling-wrapper
  template:
    metadata:
      labels:
        name: stirling-wrapper
    spec:
      tolerations:
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
      imagePullSecrets:
      - name: image-pull-secret
      containers:
      - name: stirling-wrapper
        image: gcr.io/pl-dev-infra/stirling_wrapper:{{USER}}
        args: ["--stirling_enable_parsing_protobufs=true"]
        imagePullPolicy: Always
        resources:
          limits:
            memory: 2048Mi
          requests:
            cpu: 100m
            memory: 512Mi
        securityContext:
          capabilities:
            add:
              - SYS_PTRACE
              - SYS_ADMIN
          privileged: true
        volumeMounts:
        - name: host-root
          mountPath: /host
          readOnly: true
        - name: sys
          mountPath: /sys
          readOnly: true
        env:
        - name: PL_HOST_PATH
          value: "/host"
      hostNetwork: true
      hostPID: true
      dnsPolicy: ClusterFirstWithHostNet
      terminationGracePeriodSeconds: 30
      volumes:
      - name: host-root
        hostPath:
            path: /
            type: Directory
      - name: sys
        hostPath:
            path: /sys
            type: Directory

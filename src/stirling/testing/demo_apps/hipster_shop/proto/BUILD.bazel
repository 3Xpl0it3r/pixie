load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//bazel:proto_compile.bzl", "pl_cc_proto_library", "pl_go_proto_library", "pl_proto_library")

package(default_visibility = ["//src/stirling:__subpackages__"])

pl_proto_library(
    name = "demo_pl_proto",
    srcs = ["demo.proto"],
)

pl_cc_proto_library(
    name = "demo_pl_cc_proto",
    proto = ":demo_pl_proto",
    deps = ["@com_github_grpc_grpc//:grpc++"],
)

pl_go_proto_library(
    name = "demo_pl_go_proto",
    importpath = "px.dev/pixie/src/stirling/testing/demo_apps/hipster_shop/proto",
    proto = ":demo_pl_proto",
)

go_library(
    name = "proto",
    srcs = ["demo.pb.go"],
    importpath = "px.dev/pixie/src/stirling/testing/demo_apps/hipster_shop/proto",
    deps = [
        "@com_github_gogo_protobuf//proto",
        "@org_golang_google_grpc//:go_default_library",
        "@org_golang_google_grpc//codes",
        "@org_golang_google_grpc//status",
    ],
)

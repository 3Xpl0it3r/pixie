package(default_visibility = ["//visibility:public"])

load("@bazel_tools//tools/build_defs/pkg:pkg.bzl", "pkg_tar")
load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_layer")

pkg_tar(
    name = "ssl_keys",
    srcs = [
        "ssl/certs/nginx-selfsigned.crt",
        "ssl/private/nginx-selfsigned.key",
    ],
    mode = "0755",
    strip_prefix = "/src/stirling/testing/ssl",
)

container_layer(
    name = "nginx_ssl_keys",
    directory = "/etc",
    tars = [":ssl_keys"],
)

container_layer(
    name = "nginx_conf",
    directory = "/etc/nginx",
    files = ["nginx.conf"],
)

container_image(
    name = "nginx_openssl_1_1_0_image",
    base = "@nginx_openssl_1_1_0//image",
    layers = [
        ":nginx_conf",
        ":nginx_ssl_keys",
    ],
)

container_image(
    name = "nginx_openssl_1_1_1_image",
    base = "@nginx_openssl_1_1_1//image",
    layers = [
        ":nginx_conf",
        ":nginx_ssl_keys",
    ],
)

load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

go_library(
    name = "go_default_library",
    srcs = ["auth_server.go"],
    importpath = "pixielabs.ai/pixielabs/src/services/auth",
    visibility = ["//visibility:private"],
    deps = [
        "//src/services/auth/authenv:go_default_library",
        "//src/services/auth/controllers:go_default_library",
        "//src/services/auth/proto:auth_go_proto",
        "//src/services/common:go_default_library",
        "//src/services/common/healthz:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
    ],
)

go_binary(
    name = "auth_server",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_image(
    name = "auth_server_image",
    binary = ":auth_server",
    importpath = "pixielabs.ai/pixielabs",
)

container_push(
    name = "push_auth_server_image",
    format = "Docker",
    image = ":auth_server_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/cloud/auth_server_image",
    tag = "{STABLE_BUILD_TAG}",
)

load("@io_bazel_rules_docker//container:image.bzl", "container_image")
load("@io_bazel_rules_docker//container:layer.bzl", "container_layer")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

container_layer(
    name = "conf",
    directory = "/usr/local/openresty/nginx/conf",
    files = [
        "pixie_vars.conf",
        "pixie_server_defaults.conf",
        "pixie_cache.conf",
        "pixie_filter.conf",
        "pixie_health_check.conf",
        "pixie_api.conf",
        "nginx.conf",
    ],
)

container_layer(
    name = "ui_assets",
    directory = "/assets",
    tars = ["//src/ui:bundle.tar.gz"],
)

container_layer(
    name = "installer",
    directory = "/installer",
    files = [
        "//src/utils/pixie_cli:installer_script",
    ],
)

container_layer(
    name = "customer_docs_assets",
    directory = "/customer_docs_assets",
    tars = ["//docs/customer:customer_docs_bundle"],
)

container_image(
    name = "proxy_prod_server_image",
    base = "@openresty//image",
    layers = [
        ":conf",
        ":ui_assets",
        ":installer",
        ":customer_docs_assets",
    ],
    visibility = ["//visibility:public"],
)

container_image(
    name = "proxy_dev_server_image",
    base = "@openresty//image",
    layers = [
        ":conf",
    ],
    visibility = ["//visibility:public"],
)

container_push(
    name = "push_proxy_dev_server_image",
    format = "Docker",
    image = ":proxy_dev_server_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/cloud/proxy_dev_image",
    tag = "{STABLE_BUILD_TAG}",
)

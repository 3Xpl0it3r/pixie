load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

go_library(
    name = "go_default_library",
    srcs = ["profile_server.go"],
    importpath = "pixielabs.ai/pixielabs/src/cloud/profile",
    visibility = ["//visibility:private"],
    deps = [
        "//src/cloud/profile/controller:go_default_library",
        "//src/cloud/profile/datastore:go_default_library",
        "//src/cloud/profile/profileenv:go_default_library",
        "//src/cloud/profile/profilepb:service_go_proto",
        "//src/cloud/profile/schema:go_default_library",
        "//src/shared/services:go_default_library",
        "//src/shared/services/healthz:go_default_library",
        "//src/shared/services/pg:go_default_library",
        "@com_github_golang_migrate_migrate//:go_default_library",
        "@com_github_golang_migrate_migrate//database/postgres:go_default_library",
        "@com_github_golang_migrate_migrate//source/go_bindata:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
    ],
)

go_binary(
    name = "profile_server",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_image(
    name = "profile_server_image",
    binary = ":profile_server",
    importpath = "pixielabs.ai/pixielabs",
)

container_push(
    name = "push_profile_server_image",
    format = "Docker",
    image = ":profile_server_image",
    registry = "gcr.io",
    repository = "pl-dev-infra/cloud/profile_server_image",
    tag = "{STABLE_BUILD_TAG}",
)

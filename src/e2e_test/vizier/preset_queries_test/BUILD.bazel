    name = "preset_queries_test",
    timeout = "moderate",
    srcs = ["preset_queries_test.cc"],
    data = ["//src/pxl_scripts:preset_queries"],
    tags = [
        "requires_bpf",
        # TODO(nserrino/philkuz): Fix this. Disabling this test for now on jenkins since it broken.
        "manual",
    ],
    deps = [
        "//src/carnot/planner:cc_library",
        "//src/carnot/planner:test_utils",
        "//src/carnot/planpb:plan_testutils",
        "//src/carnot/udf_exporter:cc_library",

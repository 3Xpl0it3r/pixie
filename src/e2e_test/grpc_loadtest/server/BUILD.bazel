load("@io_bazel_rules_docker//container:container.bzl", "container_push")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

package(default_visibility = ["//src/e2e_test:__subpackages__"])

go_library(
    name = "grpc_loadtest_server_lib",
    srcs = ["main.go"],
    importpath = "px.dev/pixie/src/e2e_test/grpc_loadtest/server",
    visibility = ["//visibility:private"],
    deps = [
        "//src/e2e_test/grpc_loadtest/server/loadtestpb:service_pl_go_proto",
        "@org_golang_google_grpc//:go_default_library",
    ],
)

go_binary(
    name = "grpc_loadtest_server",
    embed = [":grpc_loadtest_server_lib"],
)

go_image(
    name = "grpc_loadtest_server_image",
    binary = ":grpc_loadtest_server",
    importpath = "px.dev/pixie",
    visibility = [
        "//src/e2e_test:__subpackages__",
    ],
)

container_push(
    name = "push_grpc_loadtest_server_image",
    format = "Docker",
    image = ":grpc_loadtest_server_image",
    registry = "gcr.io",
    repository = "pixie-oss/pixie-dev/experimental/grpc_loadtest_server",
    tag = "{STABLE_BUILD_TAG}",
    tags = ["manual"],
)

load("@io_bazel_rules_docker//container:container.bzl", "container_push")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "server_lib",
    srcs = ["main.go"],
    importpath = "px.dev/pixie/src/e2e_test/http_loadtest/server",
    tags = ["manual"],
    visibility = ["//visibility:private"],
)

go_binary(
    name = "server",
    embed = [":server_lib"],
    tags = ["manual"],
    visibility = ["//src/e2e_test:__subpackages__"],
)

go_image(
    name = "http_workload_server_image",
    binary = ":server",
    tags = ["manual"],
    visibility = ["//src/e2e_test:__subpackages__"],
)

container_push(
    name = "push_http_workload_server_image",
    format = "Docker",
    image = ":http_workload_server_image",
    registry = "gcr.io",
    repository = "pixie-oss/pixie-dev/experimental/http_high_throughput_workload",
    tag = "{STABLE_BUILD_TAG}",
    tags = ["manual"],
)

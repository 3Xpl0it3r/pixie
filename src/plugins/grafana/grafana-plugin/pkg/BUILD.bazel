load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

package(default_visibility = ["//src/plugins/grafana:__subpackages__"])

go_library(
    name = "pkg_lib",
    srcs = [
        "main.go",
        "sample-plugin.go",
    ],
    importpath = "pixielabs.ai/pixielabs/src/plugins/grafana/grafana-plugin/pkg",
    deps = [
        "@com_github_grafana_grafana_plugin_sdk_go//backend",
        "@com_github_grafana_grafana_plugin_sdk_go//backend/datasource",
        "@com_github_grafana_grafana_plugin_sdk_go//backend/instancemgmt",
        "@com_github_grafana_grafana_plugin_sdk_go//backend/log",
        "@com_github_grafana_grafana_plugin_sdk_go//data",
    ],
)

go_binary(
    name = "gpx_pixie-grafana-plugin_linux_arm64",
    embed = [":pkg_lib"],
    goarch = "arm64",
    goos = "linux",
    visibility = ["//visibility:public"],
)

go_binary(
    name = "gpx_pixie-grafana-plugin_linux_arm",
    embed = [":pkg_lib"],
    goarch = "arm",
    goos = "linux",
    visibility = ["//visibility:public"],
)

go_binary(
    name = "gpx_pixie-grafana-plugin_linux_amd64",
    embed = [":pkg_lib"],
    goarch = "amd64",
    goos = "linux",
    visibility = ["//visibility:public"],
)

go_binary(
    name = "gpx_pixie-grafana-plugin_darwin_amd64",
    embed = [":pkg_lib"],
    goarch = "amd64",
    goos = "darwin",
    visibility = ["//visibility:public"],
)


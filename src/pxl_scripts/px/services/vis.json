{
  "variables": [
    {
      "name": "start_time",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-5m"
    },
    {
      "name": "namespace",
      "type": "PX_NAMESPACE",
      "description": "The name of the namespace to get stats for.",
      "defaultValue": "default"
    }
  ],
  "globalFuncs": [
    {
      "outputName": "inbound_service_let",
      "func": {
        "name": "inbound_service_let",
        "args": [
          {
            "name": "start_time",
            "variable": "start_time"
          },
          {
            "name": "namespace",
            "variable": "namespace"
          }
        ]
      }
    },
    {
      "outputName": "inbound_let_summary",
      "func": {
        "name": "inbound_let_summary",
        "args": [
          {
            "name": "start_time",
            "variable": "start_time"
          },
          {
            "name": "namespace",
            "variable": "namespace"
          }
        ]
      }
    }
  ],

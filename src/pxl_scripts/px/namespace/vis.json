{
  "variables": [
    {
      "name": "start_time",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-5m"
    },
    {
      "name": "namespace",
      "type": "PX_NAMESPACE",
      "description": "The name of the namespace.",
      "defaultValue": "default"
    }
  ],
  "widgets": [
    {
      "name": "Namespace Service Graph",
      "position": {
        "x": 0,
        "y": 3,
        "w": 12,
        "h": 3
      },
      "func": {
        "name": "service_graph",
        "args": [
          {
            "name": "start_time",
            "variable": "start_time"
          },
          {
            "name": "namespace",
            "variable": "namespace"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Graph",
        "adjacencyList": {
          "fromColumn": "requestor",
          "toColumn": "responder"
        }
      }
    },
    {
      "name": "Service List",
      "position": {
        "x": 0,
        "y": 3,
        "w": 12,
        "h": 3
      },
      "func": {
        "name": "services_for_namespace",
        "args": [
          {
            "name": "start_time",
            "variable": "start_time"
          },
          {
            "name": "namespace",
            "variable": "namespace"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    },
    {
      "name": "Pod List",
      "position": {
        "x": 0,
        "y": 6,
        "w": 12,
        "h": 3
      },
      "func": {
        "name": "pods_for_namespace",
        "args": [
          {
            "name": "start_time",
            "variable": "start_time"
          },
          {
            "name": "namespace",
            "variable": "namespace"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    }
  ]
}

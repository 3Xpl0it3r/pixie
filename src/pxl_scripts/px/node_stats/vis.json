{
  "variables": [
    {
      "name": "start",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-10m"
    },
    {
      "name": "node_name",
      "type": "PX_STRING",
      "description": "The full/partial hostname to fitler by",
      "defaultValue": ""
    },
    {
      "name": "pod",
      "type": "PX_STRING",
      "description": "The full/partial name of the pod to use as filter. Format: ns/pod_name",
      "defaultValue": ""
    }
  ],
  "globalFuncs": [
    {
      "outputName": "process_resources",
      "func": {
        "name": "cpu_stats",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "node_name",
            "variable": "node_name"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      }
    },
    {
      "outputName": "network_resources",
      "func": {
        "name": "net_stats",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "node_name",
            "variable": "node_name"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      }
    }
  ],
  "widgets": [
    {
      "name": "CPU%",
      "position": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 3
      },
      "globalFuncOutputName": "process_resources",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "cpu_pct",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "CPU usage (%)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Resident Set Size",
      "position": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 3
      },
      "globalFuncOutputName": "process_resources",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "rss_mb",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Resident Memory Usage (mb)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Sent Network Traffic",
      "position": {
        "x": 0,
        "y": 3,
        "w": 6,
        "h": 3
      },
      "globalFuncOutputName": "network_resources",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "tx_mb_per_s",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Sent Data (Mb/s)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Received Network Traffic",
      "position": {
        "x": 6,
        "y": 3,
        "w": 6,
        "h": 3
      },
      "globalFuncOutputName": "network_resources",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "rx_mb_per_s",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Received Data (Mb/s)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Nodes",
      "position": {
        "x": 0,
        "y": 6,
        "w": 6,
        "h": 3
      },
      "func": {
        "name": "node_table",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "node_name",
            "variable": "node_name"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    },
    {
      "name": "Pods",
      "position": {
        "x": 6,
        "y": 6,
        "w": 6,
        "h": 3
      },
      "func": {
        "name": "pod_table",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "node_name",
            "variable": "node_name"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    }
  ]
}

{
  "variables": [
    {
      "name": "svc",
      "type": "PX_SERVICE",
      "description": "The full/partial name of the service to get stats for. Format: ns/svc_name",
      "defaultValue": ""
    },
    {
      "name": "start",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-10m"
    }
  ],
  "globalFuncs": [
    {
      "outputName": "LET",
      "func": {
        "name": "svc_let",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      }
    }
  ],
  "widgets": [
    {
      "name": "Latency - p90 ",
      "position": {
        "x": 0,
        "y": 3,
        "w": 8,
        "h": 2
      },
      "globalFuncOutputName": "LET",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "latency_p90",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Latency - p90 (ms)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Requests per Second",
      "position": {
        "x": 0,
        "y": 0,
        "w": 8,
        "h": 3
      },
      "globalFuncOutputName": "LET",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "rps",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Requests per second"
        },
        "xAxis": null
      }
    },
    {
      "name": "Request Error Rate",
      "position": {
        "x": 0,
        "y": 5,
        "w": 8,
        "h": 2
      },
      "globalFuncOutputName": "LET",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "error_rate",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Error Rate (%)"
        },
        "xAxis": null
      }
    },
    {
      "name": "Status Code Distribution",
      "position": {
        "x": 8,
        "y": 5,
        "w": 4,
        "h": 2
      },
      "func": {
        "name": "http_code_histogram",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.BarChart",
        "bar": {
          "value": "count",
          "label": "http_resp_status",
          "horizontal": true
        },
        "xAxis": {
          "label": "HTTP Status Code"
        },
        "yAxis": {
          "label": "# of requests"
        }
      }
    },
    {
      "name": "Request Latency Histogram",
      "func": {
        "name": "latency_histogram",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.BarChart",
        "bar": {
          "value": "count",
          "label": "request_latency_ms"
        },
        "xAxis": {
          "label": "Request Latency (ms)"
        },
        "yAxis": {
          "label": "# of requests"
        }
      },
      "position": {
        "x": 8,
        "y": 3,
        "w": 4,
        "h": 2
      }
    },
    {
      "name": "Incoming Traffic",
      "position": {
        "x": 0,
        "y": 7,
        "w": 6,
        "h": 3
      },
      "func": {
        "name": "incoming_edges",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    },
    {
      "name": "Outgoing Traffic",
      "position": {
        "x": 6,
        "y": 7,
        "w": 6,
        "h": 3
      },
      "func": {
        "name": "outgoing_edges",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Table"
      }
    },
    {
      "name": "Service Graph",
      "position": {
        "x": 8,
        "y": 0,
        "w": 4,
        "h": 3
      },
      "func": {
        "name": "svc_graph",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Graph",
        "adjacencyList": {
          "fromColumn": "requestor",
          "toColumn": "responder"
        }
      }
    }
  ]
}

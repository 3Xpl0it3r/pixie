{
  "variables": [
    {
      "name": "start",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-10m"
    },
    {
      "name": "pod",
      "type": "PX_STRING",
      "description": "The full/partial name of the pod to use as a filter. Format: ns/pod_name",
      "defaultValue": ""
    }
  ],
  "globalFuncs": [
    {
      "outputName": "LET",
      "func": {
        "name": "pod_let",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      }
    },
    {
      "outputName": "process_resources",
      "func": {
        "name": "resource_stats",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "pod",
            "variable": "pod"
          }
        ]
      }
    }
  ],
  "widgets": [
    {
      "name": "Latency - p50",
      "position": {
        "x": 6,
        "y": 6,
        "w": 6,
        "h": 2
      },
      "globalFuncOutputName": "LET",
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.TimeseriesChart",
        "timeseries": [
          {
            "value": "latency_p50",
            "series": "k8s",
            "stackBySeries": false,
            "mode": "MODE_LINE"
          }
        ],
        "title": "",
        "yAxis": {
          "label": "Latency - p50 (ms)"
        },
        "xAxis": null
      }
    },

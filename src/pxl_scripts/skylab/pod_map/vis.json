{
  "variables": [
    {
      "name": "svc",
      "type": "PX_SERVICE",
      "description": "The full/partial name of the service to get stats for. Format: ns/svc_name",
      "defaultValue": ""
    },
    {
      "name": "start",
      "type": "PX_STRING",
      "description": "The relative start time of the window. Current time is assumed to be now",
      "defaultValue": "-10m"
    }
  ],
  "globalFuncs": [],
  "widgets": [
    {
      "name": "Service Graph",
      "position": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 6
      },
      "func": {
        "name": "svc_graph",
        "args": [
          {
            "name": "start",
            "variable": "start"
          },
          {
            "name": "svc",
            "variable": "svc"
          }
        ]
      },
      "displaySpec": {
        "@type": "pixielabs.ai/pl.vispb.Graph",
        "adjacencyList": {
          "fromColumn": "requestor",
          "toColumn": "responder"
        }
      }
    }
  ]
}

{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*",
        "../packages/pixie-components/src/*",
        "../packages/pixie-api/src/*",
        "../packages/pixie-api-react/src/*"
      ]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "__mocks__/**/*",
    "*.js"
  ]
}

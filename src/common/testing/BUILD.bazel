package(default_visibility = ["//visibility:public"])

load("//bazel:pl_build_system.bzl", "pl_cc_test_library")

pl_cc_test_library(
    name = "cc_library",
    srcs = glob(
        [
            "*.h",
            "*.cc",
        ],
        exclude = [
            "**/*_test.cc",
            "test_main.cc",
        ],
    ),
    hdrs = ["testing.h"],
    deps = ["//src/common/base:cc_library"],
)

pl_cc_test_library(
    name = "test_main",
    srcs = ["test_main.cc"],
    deps = [
        "//src/common/base:cc_library",
    ],
)

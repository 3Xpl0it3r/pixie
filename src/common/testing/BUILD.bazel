package(default_visibility = ["//visibility:public"])

load("//bazel:pl_build_system.bzl", "pl_cc_library", "pl_cc_test")

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        [
            "*.h",
            "*.cc",
        ],
        exclude = [
            "**/*_test.cc",
            "test_main.cc",
        ],
    ),
    hdrs = ["testing.h"],
    deps = [
        "@com_google_googletest//:gtest",
        "//src/common/base:cc_test_library",
    ],
)

pl_cc_library(
    name = "test_main",
    srcs = ["test_main.cc"],
    deps = [
        "@com_google_googletest//:gtest",
    ],
)

pl_cc_test(
    name = "line_diff_test",
    srcs = ["line_diff_test.cc"],
)

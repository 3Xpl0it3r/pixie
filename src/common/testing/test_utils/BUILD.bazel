load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("//bazel:pl_build_system.bzl", "pl_cc_library", "pl_cc_test")

package(default_visibility = ["//src:__subpackages__"])

pl_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = ["*_test.cc"],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        "//src/common/exec:cc_library",
    ],
)

container_image(
    name = "sleep_container_image",
    base = "@distroless_base_image//image",
    cmd = [
        "-c",
        "echo started & sleep 100000000",
    ],
    entrypoint = ["/busybox/sh"],
)

pl_cc_test(
    name = "container_runner_test",
    srcs = ["container_runner_test.cc"],
    data = [":sleep_container_image.tar"],
    # Doesn't really require this tag, but this could provide a clue,
    # given that it alters the build environment.
    tags = ["requires_bpf"],
    deps = [
        ":cc_library",
    ],
)

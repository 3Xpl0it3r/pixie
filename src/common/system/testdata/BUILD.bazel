load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_layer")

package(default_visibility = ["//src:__subpackages__"])

filegroup(
    name = "proc_fs",
    srcs = glob(include = ["proc/**/*"]),
)

# For scoped_namespace_test: Generate a container with a dummy file inside,
# so we can check for mount namespaces.
genrule(
    name = "dummy_file_rule",
    srcs = [],
    outs = ["dummy_file"],
    cmd = "touch $@",
)

container_layer(
    name = "dummy_file_layer",
    directory = "/dummy_dir",
    files = [":dummy_file_rule"],
)

container_image(
    name = "dummy_container_image",
    base = "//src/common/testing/test_utils:sleep_container_image",
    layers = [":dummy_file_layer"],
)

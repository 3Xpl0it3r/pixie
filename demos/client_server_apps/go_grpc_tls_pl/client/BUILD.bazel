load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:image.bzl", "container_image")

go_library(
    name = "go_default_library",
    srcs = ["client.go"],
    importpath = "pixielabs.ai/pixielabs/demos/client_server_apps/go_grpc_tls_pl/client",
    visibility = ["//visibility:private"],
    deps = [
        "//demos/client_server_apps/go_grpc_tls_pl/server/greetpb:service_pl_go_proto",
        "//src/shared/services:go_default_library",
        "//src/utils/testingutils:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
        "@com_github_spf13_pflag//:go_default_library",
        "@com_github_spf13_viper//:go_default_library",
        "@org_golang_google_grpc//:go_default_library",
        "@org_golang_google_grpc//metadata:go_default_library",
    ],
)

go_binary(
    name = "client",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

container_image(
    name = "client_image_base",
    base = "@go_image_base//image",
    directory = "/certs",
    files = ["//demos/client_server_apps/go_grpc_tls_pl/certs:client_certs"],
)

go_image(
    name = "client_image",
    args = [
        "--client_tls_cert=/certs/client.crt",
        "--client_tls_key=/certs/client.key",
        "--tls_ca_cert=/certs/rootCA.crt",
        "--count=1",
    ],
    base = ":client_image_base",
    binary = ":client",
    visibility = ["//visibility:public"],
)
